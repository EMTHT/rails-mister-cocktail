<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1496318447583-f524534e9ce1?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=c405034528cf04acab707e51be371d3c&auto=format&fit=crop&w=1610&q=80');">
  <div class="container">
    <div class="row">
      <div class="form-group col-sm-offset-4 col-sm-4">
        <h1>Add a new cocktail</h1>
      </div>
    </div>
  <%= form_for(@cocktail) do |f| %>
    <div class="row">
      <div class="form-group col-sm-offset-4 col-sm-4">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="form-group col-sm-offset-4 col-sm-4">
        <h5>Find a beautiful image on : <%= link_to 'Unsplash', 'https://unsplash.com/'%> and paste the url</h5>
        <%= f.text_field :image, class: 'form-control' %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
    <% end %>
    <br>
    <div class="row">
      <div class="col-sm-offset-4  col-sm-4">
        <%= link_to "Back", cocktails_path %>
      </div>
    </div>
  </div>
</div>
