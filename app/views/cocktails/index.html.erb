
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1514447084304-976bcf033264?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=e3d56067737441d85f6dafc9552c63bf&auto=format&fit=crop&w=1500&q=80');">
  <div class="banner-content">
    <h1>El Cocktailator</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <div class="row">
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" name="query" type="search" placeholder="Type everything" aria-label="Search" value="<%= params[:query] %>">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Discover</button>
      </form>
    </div>
    <% if @query.present? %>
    <br><br>
    <div class="row">
      <div class="col">
      <p>You searched for <strong><%= @query %></strong></p>
      <p>We found <%= @cocktails.count %> cocktails out of our 10 000 000 cocktails on our website.</p>
    </div>
    <%end %>
  </div>
  </div>
</div>

  <h1>Selected choice of best cocktails</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div data-aos="zoom-in-down"
           data-aos-duration="6000">
        <div class="col-xs-12 col-sm-4">
          <div  class="card"
                style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                url(<%= cocktail.photo.present? ? cl_image_path(cocktail.photo) : cocktail.image %>);">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
              <%= link_to "Recipe", cocktail_show_path(cocktail) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-3  col-sm-6">
        <h4>An excellent cocktail not in the list</h4>
        <h5>Share it with everyone</h5>
        <h5><%= link_to "Add a new cocktail", new_cocktail_path, class: 'btn-primary' %></h5>
        <br><br>
      </div>
    </div>
  </div>
</div>
