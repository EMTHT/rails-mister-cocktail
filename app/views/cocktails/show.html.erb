<div class="ingredients-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= @cocktail.image %>);">
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-4  col-sm-4">
        <h1><%= @cocktail.name %></h1>

        <% if @cocktail.reviews != nil  %>
          <% reviews_array = [] %>
          <% @cocktail.reviews.each do |review| %>
            <% reviews_array << review.rating %>
          <% end %>

          <% if reviews_array.size != 0  %>

            <p> <% (reviews_array.sum / reviews_array.size).times do %>
            <i class="fas fa-star"></i>
            <% end %>

            <% (5 - (reviews_array.sum / reviews_array.size)).times do %>
            <i class="far fa-star"></i>
            <% end  %>
            </p>
          <%else %>
          <%end %>

        <% else %>
          <p>no ratings yet ... add yours</p>
        <% end %>

        </p>


      </div>
    </div>

    <div class="row">
      <div class="col-sm-offset-4  col-sm-4 ingredients">
        <h4>Ingredients</h4>
        <% @cocktail.doses.each do |dose| %>
          <p> <%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "(Delete)", dose_path(dose.id), method: :delete %></p>

        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-offset-4  col-sm-4">
        <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: 'btn-primary'%>
        <%= link_to "Add your rating", new_cocktail_review_path(@cocktail), class: 'btn-primary'%>
      </div>
    </div>
    <br><br>
     <div class="row">
      <div class="col-sm-offset-4  col-sm-4">
        <%= link_to "Back", cocktails_path %>
      </div>
    </div>
  </div>
</div>






