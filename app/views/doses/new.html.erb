<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1437750769465-301382cdf094?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=890de1d06e35c198502e1f781d8ff414&auto=format&fit=crop&w=1355&q=80');">
  <div class="container">
    <div class="row">
      <div class="form-group col-sm-offset-2 col-sm-8">
        <h1>Add a new ingredient</h1>
      </div>
    </div>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <div class="row">
      <div class="form-group col-sm-offset-4 col-sm-4">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="form-group col-sm-offset-4 col-sm-4">
        <%= f.association :ingredient, class: 'form-control' %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
    <% end %>
    <br>
    <div class="row">
      <div class="col-sm-offset-4  col-sm-4">
        <%= link_to "Back", cocktails_path %>
      </div>
    </div>
  </div>
</div>
